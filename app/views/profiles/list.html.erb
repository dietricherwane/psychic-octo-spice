<!-- Title area -->
<div class="titleArea">
    <div class="wrapper">
        <div class="pageTitle">
            <h5>Liste des profils d'administration</h5>
            <span>Prise en charge des actions liées à la liste des profils d'administration.</span>
        </div>

        <div class="clear"></div>
    </div>
</div>

<div class="line"></div>

<%= render "profiles/profile_menu.html.erb" %>

<div class="line"></div>

<!-- Main content wrapper -->
<div class="wrapper">
<%= flash_messages! %>
<!-- Widgets -->
  <div class="widget">
    <div class="title"><img src="<%= asset_path 'icons/dark/full2.png' %>" alt="" class="titleIcon" /><h6>Liste des profils d'administration</h6></div>
    <table cellpadding="0" cellspacing="0" border="0" class="display dTable taskWidget">
      <thead>
        <tr>
          <th>Intitulé</th>
          <th>Responsable du département</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% unless @admin_profiles.blank? %>
          <% @admin_profiles.each do |profile| %>
            <tr class="gradeA">
              <td class = "taskPr">
                <%= profile.description %>
              </td>
              <td>
                <%= profile.manager %>
              </td>
              <td class = "actBtns">
                <a href="<%= edit_profile_path(profile.id) %>" class="tipS" original-title="Modifier"><%= image_tag('icons/color/pencil.png', alt: '') %></a>
                <a href="<%= profile_rights_path(profile.id) %>" class="tipS"  original-title="Afficher les habilitations"><%= image_tag('icons/color/user-black.png', alt: '') %></a>
              </td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<!-- End Main content wrapper -->
