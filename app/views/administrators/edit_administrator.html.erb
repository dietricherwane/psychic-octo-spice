<div class="titleArea">
    <div class="wrapper">
        <div class="pageTitle">
            <h5>Changez le profil</h5>
            <span>Modifiez les informations liées au compte.</span>
        </div>

        <div class="clear"></div>
    </div>
</div>

<div class="line"></div>

<%= render "administrators/shared/administrator_menu.html.erb" %>

<div class="line"></div>

<!-- Main content wrapper -->
<div class="wrapper">

  <%= flash_messages! %>
  <%= form_for(@administrator, url: update_admin_path, html: { method: :post, class: 'form' }) do |f| %>

    <fieldset>
      <div class="widget">
        <div class="title">
          <img src="<%= asset_path 'icons/dark/users.png' %>" alt="" class="titleIcon" />
          <h6>Formulaire de mise à jour de compte</h6>
        </div>

        <%= hidden_field_tag :id, @administrator.id %>

        <div class="formRow">
          <label><%= f.label :profile_id %></label>
          <div class="formRight">
            <%= f.collection_select :profile_id, @profiles, :id, :description, options ={prompt: "Veuillez choisir un profil"}, html_options = {class: "form-control"} %>
          </div>
          <div class="clear"></div>
        </div>

        <div class="formRow">
          <label><%= f.label :firstname %></label>
          <div class="formRight">
            <%= f.text_field :firstname, placeholder: "Veuillez entrer le nom", class: 'form-control', autofocus: true %>
          </div>
          <div class="clear"></div>
        </div>

        <div class="formRow">
          <label><%= f.label :lastname %></label>
          <div class="formRight">
            <%= f.text_field :lastname, placeholder: "Veuillez entrer les prénoms", class: 'form-control' %>
          </div>
          <div class="clear"></div>
        </div>

        <div class="formRow">
          <label><%= f.label :phone_number %></label>
          <div class="formRight">
            <%= f.text_field :phone_number, placeholder: "Veuillez entrer le numéro de téléphone fixe", class: 'form-control' %>
          </div>
          <div class="clear"></div>
        </div>

        <div class="formRow">
          <label><%= f.label :email %></label>
          <div class="formRight">
            <%= f.text_field :email, placeholder: "Veuillez entrer l'email", class: 'form-control' %>
          </div>
          <div class="clear"></div>
        </div>

        <div class="formRow">
          <%= f.submit "Valider", class: 'basic' %>
        </div>
      </div>
    </fieldset>
  <% end %>

</div>
<!-- End Main content wrapper -->
