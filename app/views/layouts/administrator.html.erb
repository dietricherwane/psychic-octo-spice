    <div class="topNav">
        <div class="wrapper">
            <div class="welcome"><%#= image_tag(current_user.avatar.url(:small), width: "18px") rescue "" %><span><%= "#{current_administrator.full_name} [#{@profile.description}]"  %></span></div>
            <div class="userNav">
                <ul>
                  <% unless current_administrator.blank? %>
