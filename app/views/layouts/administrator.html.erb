<!DOCTYPE html>
<html>
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />

  <title>LONACI::Administration</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<body>

<!-- Left side content -->
<div id="leftSide">
    <div class="logo"><a href="<%= gamers_path %>"><img src="<%= asset_path 'logo.png' %>" alt="" width = "134px" /></a></div>

    <div class="sidebarSep"></div>

    <!-- Left navigation -->
    <ul id="menu" class="nav">
      <% if @profile.description == "Super Administrateur" %>
      <li class="dash"><%= link_to "<span>Administration</span>".html_safe, new_administrator_registration_path, class: "#{@class_administrators}" %></li>
      <% end %>
      <% if @game_administrator %>
      <li class="dash"><%= link_to "<span>Liste des Joueurs</span>".html_safe, gamers_path, class: "#{@class_gamers}" %></li>
      <% end %>
      <% if @game_administrator %>
      <li class="tables"><a href="#" title="" class="exp" id = "<%= @games_menu_style %>"><span>Liste des transactions</span><strong>5</strong></a>
