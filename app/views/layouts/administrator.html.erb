          <li class = "<%= @spc_winner_on_hold_menu_style %>"><a href="<%= spc_winners_on_hold_path %>" title="">SPORTCASH</a></li>
          <li class = "<%= @cm_winner_on_hold_menu_style %>"><a href="<%= cm_winners_on_hold_path %>" title="">PMU ALR</a></li>
        </ul>
      </li>
      <% end %>

      <% if @game_administrator %>
      <li class="tables"><a href="#" title="" class="exp" id = "<%= @winners_menu_style %>"><span>Liste des gagnants</span><strong>4</strong></a>
        <ul class="sub">
          <% if @profile.loto_right %>
            <li class = "<%= @loto_winners_menu_style %>"><a href="<%= loto_winners_path %>" title="">LOTO BONHEUR</a></li>
          <% end %>
          <% if @profile.pmu_plr_right %>
            <li class = "<%= @pmu_plr_winners_menu_style %>"><a href="<%= pmu_plr_winners_path %>" title="">PMU PLR</a></li>
          <% end %>
          <% if @profile.spc_right %>
            <li class = "<%= @spc_winners_menu_style %>"><a href="<%= spc_winners_path %>" title="">SPORTCASH</a></li>
          <% end %>
          <% if @profile.pmu_alr_right %>
            <li class = "<%= @cm_winners_menu_style %>"><a href="<%= cm_winners_path %>" title="">PMU ALR</a></li>
          <% end %>
        </ul>
      </li>
      <% end %>
      <li class="dash"><%= link_to "<span>SMS</span>".html_safe, "#" %></li>
    </ul>
</div>


