            <li class = "<%= @cm_game_menu_style %>"><a href="<%= list_cm_bets_path %>" title="">PMU ALR</a></li>
          <% end %>
          <% if @profile.eppl_right %>
            <li class = "<%= @eppl_game_menu_style %>"><a href="<%= list_eppl_bets_path %>" title="">Jeux digitaux</a></li>
          <% end %>
        </ul>
      </li>
      <% end %>
      <% if @profile.payment_on_hold_right %>
      <li class="tables"><a href="#" title="" class="exp" id = "<%= @winners_on_hold_menu_style %>"><span>En attente de paiement</span><strong>4</strong></a>
        <ul class="sub">
          <li class = "<%= @loto_winner_on_hold_menu_style %>"><a href="<%= loto_winners_on_hold_path %>" title="">LOTO BONHEUR</a></li>
