<!-- Title area -->
<div class="titleArea">
    <div class="wrapper">
        <div class="pageTitle">
            <h5>Profil du parieur</h5>
            <span><%= @gamer.firstname rescue "" %> <%= @gamer.lastname rescue "" %></span>
        </div>
        <div class="clear"></div>
    </div>
</div>

<div class="line mt30"></div>

  <div class="horControlB">
    <ul>
    	<li><a href="javascript:history.go(-1);" title=""><img src="<%= asset_path 'icons/control/16/archives.png' %>" alt=""><span>Retour</span></a></li>
      </ul>
  </div>

<div class="line"></div>

<!-- Main content wrapper -->
<div class="wrapper">
  <%= flash_messages! %>
  <form class = 'form'>

    <fieldset>
      <div class="widget">
        <div class="title">
          <img src="<%= asset_path 'icons/dark/users.png' %>" alt="" class="titleIcon" />
          <h6>Détails du pari - SportCash</h6>
        </div>

        <div class="formRow">
          <label>Statut du pari</label>
          <div class="formRight" style = "color:<%= @bet.bet_status == 'En cours' ? 'grey' : (@bet.bet_status == 'Gagnant' ? 'green' : 'red') %>">
            <b><%= @bet.bet_status %></b>
          </div>
          <div class="clear"></div>
        </div>

        <div class="formRow">
          <label>Formule</label>
          <div class="formRight">
            <b><%= @bet.formula %></b>
          </div>
          <div class="clear"></div>
        </div>

        <div class="formRow">
            <label>Date de prise du pari</label>
            <div class="formRight">
              <b><%= @bet.created_at.strftime("%d-%m-%Y") + " à " + @bet.created_at.strftime("%Hh %Mmn") %></b>
            </div>
            <div class="clear"></div>
          </div>

        <div class="formRow">
          <label>Début de l'évènement</label>
          <div class="formRight">
            <b><%= @bet.begin_date %></b>
          </div>
          <div class="clear"></div>
        </div>

        <div class="formRow">
          <label>Fin de l'évènement</label>
          <div class="formRight">
            <b><%= @bet.end_date %></b>
          </div>
          <div class="clear"></div>
        </div>

        <% if @bet.pr_status %>
          <div class="formRow">
            <label>Montant du gain</label>
            <div class="formRight" style = "color:green">
              <b><%= number_with_delimiter(@bet.win_amount) %></b>
            </div>
            <div class="clear"></div>
          </div>

          <div class="formRow">
            <label>Date de paiement des gains</label>
            <div class="formRight" style = "color:green">
              <b><%= @bet.payment_status_datetime %></b>
            </div>
            <div class="clear"></div>
          </div>
        <% end %>

        <div class="formRow">
          <label>Numéro de compte paymoney</label>
          <div class="formRight">
            <b><%= @bet.paymoney_account_number %></b>
          </div>
          <div class="clear"></div>
        </div>

        <div class="formRow">
          <label>Identifiant de la transaction</label>
          <div class="formRight">
            <b><%= @bet.transaction_id %></b>
          </div>
          <div class="clear"></div>
        </div>

        <div class="formRow">
          <label>Numéro de ticket</label>
          <div class="formRight">
            <b><%= @bet.ticket_id %></b>
          </div>
          <div class="clear"></div>
        </div>

        <% @wagers = @bet.bet_coupons %>

        <div class="title">
          <img src="<%= asset_path 'icons/dark/users.png' %>" alt="" class="titleIcon" />
          <h6>Liste des paris</h6>
        </div>

        <% unless @wagers.blank? %>
          <% @wagers.each do |wager| %>

            <div class="formRow">
              <label>Sport</label>
              <div class="formRight">
                <b><%= wager.sport %></b>
              </div>
              <div class="clear"></div>
            </div>

            <div class="formRow">
              <label>Equipes</label>
              <div class="formRight">
                <b><%= wager.teams %></b>
              </div>
              <div class="clear"></div>
            </div>

            <div class="formRow">
              <label>Date de début</label>
              <div class="formRight">
                <b><%= wager.begin_date[0..7][6..7] %>-<%= wager.begin_date[0..7][4..5] %>-<%= wager.begin_date[0..7][0..3] %> à <%= wager.begin_date[8..(wager.begin_date.length)] %></b>
              </div>
              <div class="clear"></div>
            </div>

            <div class="formRow">
              <label>Pal code</label>
              <div class="formRight">
                <b><%= wager.pal_code %></b>
              </div>
              <div class="clear"></div>
            </div>

            <div class="formRow">
              <label>Code de l'évènement</label>
              <div class="formRight">
                <b><%= wager.event_code %></b>
              </div>
              <div class="clear"></div>
            </div>

            <div class="formRow">
              <label>Code du pari</label>
              <div class="formRight">
                <b><%= wager.bet_code %></b>
              </div>
              <div class="clear"></div>
            </div>

            <div class="formRow">
              <label>Code du tirage</label>
              <div class="formRight">
                <b><%= wager.draw_code %></b>
              </div>
              <div class="clear"></div>
            </div>

            <div class="formRow">
              <label>Côte</label>
              <div class="formRight">
                <b><%= wager.odd %></b>
              </div>
              <div class="clear"></div>
            </div>

            <hr />
          <% end %>
        <% end %>
      </div>
    </fieldset>
  </form>

</div>
<!-- End Main content wrapper -->
