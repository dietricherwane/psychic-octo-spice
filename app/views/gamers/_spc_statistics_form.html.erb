<div class="widget">
  <div class="title"><img src="<%= asset_path 'icons/dark/full2.png' %>" alt="" class="titleIcon" /><h6>Statistiques relatives à Sport Cash</h6></div>
  <table cellpadding="0" cellspacing="0" border="0" class="display dTable taskWidget">
    <thead>
      <tr>
        <th>Statut</th>
        <th>Nombre de paris</th>
        <th>Montant des paris</th>
        <th>Montant des annulations</th>
        <th>Montant des gains</th>
      </tr>
    </thead>
    <tbody>
      <tr class="gradeA">
        <td class = "taskP">
          En cours
        </td>
        <td>
          <% on_hold_count = @spc_bets.where("bet_status = 'En cours'").count %>
          <%= number_with_delimiter(on_hold_count) %>
        </td>
        <td>
          <% on_hold_amount = @spc_bets.where("bet_status = 'En cours'").map{|bet| (bet.amount.to_f rescue 0)}.sum %>
          <%= number_with_delimiter(on_hold_amount) %>
        </td>
        <td>

        </td>
        <td>

        </td>
      </tr>
      <tr class="gradeA">

        <td class = "taskD">
          Annulé
        </td>
        <td>
          <% cancelled_count = @spc_bets.where("bet_status = 'Annulé'").count %>
          <%= number_with_delimiter(cancelled_count) %>
        </td>
        <td>
          <% cancelled_amount = @spc_bets.where("bet_status = 'Annulé'").map{|bet| (bet.amount.to_f rescue 0)}.sum %>
          <%= number_with_delimiter(cancelled_amount) %>
        </td>
        <td>
          <%= number_with_delimiter(cancelled_amount) %>
        </td>
        <td>

        </td>
      </tr>
      <tr class="gradeA">
        <td class = "taskD">
          Perdant
        </td>
        <td>
          <% loosers_count = @spc_bets.where("bet_status = 'Perdant'").count %>
          <%= number_with_delimiter(loosers_count) %>
        </td>
        <td>
          <% loosers_amount = @spc_bets.where("bet_status = 'Perdant'").map{|bet| (bet.amount.to_f rescue 0)}.sum %>
          <%= number_with_delimiter(loosers_amount) %>
        </td>
        <td>

        </td>
        <td>

        </td>
      </tr>
      <tr class="gradeA">
        <td class = "taskPr">
          Gagnant
        </td>
        <td>
          <% winners_count = @spc_bets.where("bet_status = 'Gagnant'").count %>
          <%= number_with_delimiter(winners_count) %>
        </td>
        <td>
          <% winners_amount = @spc_bets.where("bet_status = 'Gagnant'").map{|bet| (bet.amount.to_f rescue 0)}.sum %>
          <%= number_with_delimiter(winners_amount) %>
        </td>
        <td>

        </td>
        <td>
          <% win_amount = @spc_bets.where("bet_status = 'Gagnant' OR bet_status = 'Remboursé'").map{|bet| (bet.pn_amount_win.to_f rescue 0)}.sum %>
          <%= number_with_delimiter(win_amount) %>
        </td>
      </tr>
      <tr class="gradeA">
        <td>
          <b>Total</b>
        </td>
        <td>
          <b><%= number_with_delimiter(winners_count + loosers_count + cancelled_count + on_hold_count) %></b>
        </td>
        <td>
          <b><%= number_with_delimiter(winners_amount + loosers_amount + cancelled_amount + on_hold_amount) %></b>
        </td>
        <td>
          <b><%= number_with_delimiter(cancelled_amount) %></b>
        </td>
        <td>
          <b><%= number_with_delimiter(win_amount) %></b>
        </td>
      </tr>
    </tbody>
  </table>
</div>
