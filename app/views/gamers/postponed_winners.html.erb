<div class="titleArea">
    <div class="wrapper">
        <div class="pageTitle">
            <h5><%= @game %></h5>
            <span>Paiement des gagnants millionnaires</span>
        </div>

        <div class="clear"></div>
    </div>
</div>

<div class="line"></div>

<%#= render "administrators/shared/administrator_menu.html.erb" %>

<div class="line"></div>

<!-- Main content wrapper -->
<div class="wrapper">

  <%= flash_messages! %>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form'}) do |f| %>

    <fieldset>
      <div class="widget">
        <div class="title">
          <img src="<%= asset_path 'icons/dark/users.png' %>" alt="" class="titleIcon" />
          <h6>Formulaire de création de compte</h6>
        </div>

        <!--
        <div class="formRow">
          <label><%= f.label :profile_id %></label>
          <div class="formRight">
            <%= f.collection_select :profile_id, @profiles, :id, :description, options ={prompt: "Veuillez choisir un profil"}, html_options = {class: "form-control"} %>
          </div>
          <div class="clear"></div>
        </div>
        -->

        <div class="formRow">
          <label><%= f.label :firstname %></label>
          <div class="formRight">
            <%= f.text_field :firstname, placeholder: "Veuillez entrer le nom", class: 'form-control', autofocus: true %>
          </div>
          <div class="clear"></div>
        </div>

        <div class="formRow">
          <label><%= f.label :lastname %></label>
          <div class="formRight">
            <%= f.text_field :lastname, placeholder: "Veuillez entrer les prénoms", class: 'form-control' %>
          </div>
          <div class="clear"></div>
        </div>

        <div class="formRow">
          <label><%= f.label :phone_number %></label>
          <div class="formRight">
            <%= f.text_field :phone_number, placeholder: "Veuillez entrer le numéro de téléphone fixe", class: 'form-control' %>
          </div>
          <div class="clear"></div>
        </div>

        <div class="formRow">
          <label><%= f.label :email %></label>
          <div class="formRight">
            <%= f.text_field :email, placeholder: "Veuillez entrer l'email", class: 'form-control' %>
          </div>
          <div class="clear"></div>
        </div>

        <div class="formRow">
          <label><%= f.label :password %></label>
          <div class="formRight">
            <%= f.password_field :password, placeholder: "Veuillez entrer le mot de passe", autocomplete: "off", class: 'form-control' %>
          </div>
          <div class="clear"></div>
        </div>

        <div class="formRow">
          <label><%= f.label :password_confirmation %></label>
          <div class="formRight">
            <%= f.password_field :password_confirmation, placeholder: "Veuillez confirmer le mot de passe", autocomplete: "off", class: 'form-control' %>
          </div>
          <div class="clear"></div>
        </div>

        <div class="formRow">
          <%= f.submit "Valider", class: 'basic' %>
        </div>
      </div>
    </fieldset>
  <% end %>

</div>
<!-- End Main content wrapper -->
