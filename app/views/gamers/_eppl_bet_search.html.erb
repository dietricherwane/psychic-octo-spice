<%= form_tag(gamer_eppl_bet_search_path, method: :post, :class => 'form') do %>

  <%= hidden_field_tag :uuid, @gamer.uuid %>

  <fieldset>
    <div class="widget">
      <div class="title">
        <img src="<%= asset_path 'icons/dark/full2.png' %>" alt="" class="titleIcon" />
        <h6>Formulaire de recherche</h6>
      </div>

      <div class="formRow">
        <label>Statut</label>
        <div class="formRight">
          <%= select_tag "status_id", options_for_select([ "Chargement de compte", "Rechargement de compte", "Transfert de gains" ], params[:status_id]), prompt: "Veuillez choisir un statut", class: "form-control" %>
        </div>
        <div class="clear"></div>
      </div>

      <div class="formRow">
        <label>Montant minimum de gains</label>
        <div class="formRight">
          <%= text_field_tag "min_amount", @min_amount, placeholder: "Veuillez choisir le montant minimal de gains", :class => "form-control" %>
        </div>
        <div class="clear"></div>
      </div>

      <div class="formRow">
        <label>Montant maximum de gains</label>
        <div class="formRight">
          <%= text_field_tag "max_amount", @max_amount, placeholder: "Veuillez choisir le montant maximal de gains", class: "form-control" %>
        </div>
        <div class="clear"></div>
      </div>

      <div class="formRow">
        <%= submit_tag "Valider", class: 'basic' %>
      </div>

    </div>
  </fieldset>
<% end %>
